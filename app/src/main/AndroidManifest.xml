<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myapp.traveldiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".DiaryModificationActivity"
            android:label="@string/title_activity_diary_modification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiaryCreationActivity"
            android:label="@string/title_activity_diary_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventModificationActivity"
            android:label="@string/title_activity_event_modification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventCreationActivity"
            android:label="@string/title_activity_event_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".EventOverviewActivity"
            android:label="@string/title_activity_event_overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventListActivity"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
